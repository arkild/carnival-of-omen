<!-- This view is to see specific entries in the guestbook. It's recommended because it's a RESTful route. -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: `${entry.name}'s entry`}) %>
    <link rel="stylesheet" href="/styles/entry-details.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>
<!-- The Entry Details view will show Name and Title, as well as whether or not they had fun, the description of the review,  and the date the review was added. -->
    <div class="content">
    <div class="entryblock">
        <p class="is-size-3"><%= entry.entryTitle %></p>
        <p class="is-size-5">by <strong><%= entry.name %></strong> on <%= entry.dateAdded.toLocaleDateString("en-US") %></p>
        <p class="is-size-5"><strong>Did you have fun?</strong><i> <%= entry.haveFun %></i> </p>
        <p class="is-size-5"><%= entry.description %> </p>
        <br>
    </div>
    <section class="adminblock field is-grouped">
        <div class="control">
        <button class="btn button is-warning"><a href="/guestbook/<%= entry._id %>/edit">Edit</a></button>
        </div>
        <div class="control">
        <form method="POST" action="/guestbook/<%= entry._id %>?_method=DELETE"><input class="btn button is-danger" type="submit" value="Delete" /></form>
        </div>
    </section>
    <br>
    <a href="/guestbook">Back to the Guestbook</a>
    </div>

</body>

</html>